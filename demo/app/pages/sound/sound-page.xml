<page:DrawerPage navigatingTo="navigatingTo"
  xmlns:lv="nativescript-telerik-ui/listview"
  xmlns:page="nativescript-telerik-ui/sidedrawer/drawerpage"
  xmlns:d="pages/drawer"
  xmlns:ab="pages/action-bar"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer">

  <page:DrawerPage.actionBar>
    <ab:action-bar-template />
  </page:DrawerPage.actionBar>

  <page:DrawerPage.sideDrawer>
    <drawer:RadSideDrawer id="side-drawer" drawerSize="260"
      xmlns:drawer="nativescript-telerik-ui/sidedrawer">
      <drawer:RadSideDrawer.drawerContent>
        <d:drawer-content />
      </drawer:RadSideDrawer.drawerContent>
      <drawer:RadSideDrawer.drawerTransition>
        <drawer:PushTransition />
      </drawer:RadSideDrawer.drawerTransition>
    </drawer:RadSideDrawer>
  </page:DrawerPage.sideDrawer>

  <StackLayout class="m-t-5">    
    <Label text="{{ 'Volume: ' + volume }}" class="text-center" />
    <Slider minValue="0" maxValue="7" value="{{ volume }}" class="slider" />

    <Label text="{{ 'Sound Index: ' + soundIndex + ' - ' + soundName }}" class="text-center" />
    <Slider minValue="1" maxValue="106" value="{{ soundIndex }}" class="slider" />

    <GridLayout rows="60" columns="*, *, *">
      <Button row="0" col="0" text="Play" tap="{{ playSound }}" class="btn btn-primary" />
      <Button row="0" col="1" text="Mute" tap="{{ mute }}" class="btn btn-primary" />
      <Button row="0" col="2" text="Max Vol" tap="{{ setMaxVolume }}" class="btn btn-primary" />
    </GridLayout>

    <StackLayout class="hr-light"></StackLayout>

    <GridLayout rows="*, *, *, *, *" columns="*, *, *">
      <Button row="0" col="0" text="Hello" tap="{{ playSoundHello }}" class="btn btn-outline" />
      <Button row="0" col="1" text="Talk" tap="{{ playSoundConversation }}" class="btn btn-outline" />
      <Button row="0" col="2" text="Bye" tap="{{ playSoundBye }}" class="btn btn-outline" />

      <Button row="1" col="0" text="Sing" tap="{{ playSoundSing }}" class="btn btn-outline" />
      <Button row="1" col="1" text="Song 1" tap="{{ playSoundSong1 }}" class="btn btn-outline" />
      <Button row="1" col="2" text="Song 2" tap="{{ playSoundSong2 }}" class="btn btn-outline" />

      <Button row="2" col="0" text="Drink" tap="{{ playSoundDrink }}" class="btn btn-outline" />
      <Button row="2" col="1" text="Eat" tap="{{ playSoundEat }}" class="btn btn-outline" />
      <Button row="2" col="2" text="Burp" tap="{{ playSoundBurp }}" class="btn btn-outline" />

      <Button row="3" col="0" text="Sad" tap="{{ playSoundSad }}" class="btn btn-outline" />
      <Button row="3" col="1" text="Happy" tap="{{ playSoundHappy }}" class="btn btn-outline" />
      <Button row="3" col="2" text="Excited" tap="{{ playSoundExcited }}" class="btn btn-outline" />
      
      <Button row="4" col="0" text="Punch 1" tap="{{ playSoundPunch1 }}" class="btn btn-outline" />
      <Button row="4" col="1" text="Punch 2" tap="{{ playSoundPunch2 }}" class="btn btn-outline" />
      <Button row="4" col="2" text="Punch 3" tap="{{ playSoundPunch3 }}" class="btn btn-outline" />
    </GridLayout>
  </StackLayout>
</page:DrawerPage>