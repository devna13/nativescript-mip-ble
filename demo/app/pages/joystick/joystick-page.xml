<page:DrawerPage navigatingTo="navigatingTo"
  xmlns:page="nativescript-telerik-ui/sidedrawer/drawerpage"
  xmlns:d="pages/drawer"
  xmlns:ab="pages/action-bar">

  <page:DrawerPage.actionBar>
    <ab:action-bar-template />
  </page:DrawerPage.actionBar>

  <page:DrawerPage.sideDrawer>
    <d:drawer-template />
  </page:DrawerPage.sideDrawer>

  <StackLayout xmlns:js="nativescript-joystick">
    <Button text="Start" tap="{{ startJoystick }}" />
    <Button text="Stop" tap="{{ stopJoystick }}" />

    <StackLayout orientation="horizontal" >
      <js:JoyStick
        padColor="black"
        buttonColor="white"
        width="50%"
        vertical="{{speed}}">
      </js:JoyStick>
      <js:JoyStick
        padColor="blue"
        buttonColor="red"
        width="50%"
        horizontal="{{turnSpeed}}">
      </js:JoyStick>
    </StackLayout>
  </StackLayout>
</page:DrawerPage>